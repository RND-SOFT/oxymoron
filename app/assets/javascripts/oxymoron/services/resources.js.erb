angular.module("oxymoron.services.resources", [])
  .factory('resourceDecorator', [function () {
    return function(resource) {
      return resource;
    };
  }])

  <% @resources.each do |key, value| %>
    .factory('<%= key %>', ['$resource', 'resourceDecorator', '$http', function ($resource, resourceDecorator, $http) {
      return resourceDecorator($resource(<%= value[:url] %> + '.json', <%= value[:default_params].to_json%>, <%= JSON.pretty_generate(value[:actions]).split("\n").map{|l| (' ' * 6) + l}.join("\n").strip.gsub(/"\$http\.defaults\.subdomain\ \+\ '(.*)'"/, "$http.defaults.subdomain + '\\1'") %>));
    }])
  <% end %>